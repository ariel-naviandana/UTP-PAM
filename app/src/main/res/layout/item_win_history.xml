<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@android:color/white"
    android:layout_marginBottom="8dp">

    <!-- Gambar Bukti -->
    <ImageView
        android:id="@+id/imgBukti"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:layout_marginEnd="12dp"
        android:background="#E0E0E0" />

    <!-- Konten kanan -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="User" />

        <TextView
            android:id="@+id/txtJumlahMenang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jumlah Menang" />

        <TextView
            android:id="@+id/txtTanggalMenang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tanggal Menang" />

        <TextView
            android:id="@+id/txtStatusVerified"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: Belum diverifikasi"
            android:textColor="#FF0000"
            android:textStyle="italic"
            android:layout_marginTop="4dp" />

        <!-- Baris tombol atas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="end">

            <Button
                android:id="@+id/btnDownload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Download"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnVerify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verify" />
        </LinearLayout>

        <!-- Baris tombol bawah -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            android:gravity="end">

            <Button
                android:id="@+id/btnViewImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lihat Bukti"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hapus" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
