<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp">

        <!-- Gambar Ilustrasi Tips -->
        <ImageView
            android:id="@+id/ivGambar"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:background="@color/gray_light"
            android:contentDescription="Gambar Ilustrasi Tips"
            android:src="@drawable/ic_banner_placeholder"
            android:clickable="true"
            android:focusable="true" />

        <!-- Judul Tips -->
        <TextView
            android:id="@+id/tvJudulTips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="Judul" />

        <!-- Kategori Tips -->
        <TextView
            android:id="@+id/tvKategori"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            android:background="@drawable/bg_chip_category"
            android:text="Kategori" />

        <!-- Konten Tips (ringkas) -->
        <TextView
            android:id="@+id/tvKonten"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/gray_dark"
            android:textSize="14sp"
            android:maxLines="3"
            android:ellipsize="end"
            android:text="Isi konten" />

        <!-- Garis Batas -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/gray_light" />

        <!-- Tombol Aksi -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="end"
            android:weightSum="2">

            <Button
                android:id="@+id/btnDeleteTips"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="10dp"
                android:text="Hapus"
                android:textColor="@color/white"
                android:backgroundTint="@color/red"
                />

            <Button
                android:id="@+id/btnDownloadTips"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginHorizontal="10dp"
                android:text="Download Gambar"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:backgroundTint="@color/colorPrimaryDark"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>