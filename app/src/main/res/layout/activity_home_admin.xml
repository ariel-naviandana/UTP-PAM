<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hercules77 Admin Dashboard"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardSlotMachine"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/textViewTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cardEvent"
        app:layout_constraintWidth_percent="0.48">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manajemen Mesin Slot"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="16dp"
            android:gravity="center" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardEvent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/textViewTitle"
        app:layout_constraintStart_toEndOf="@id/cardSlotMachine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.48">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manajemen Event"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="16dp"
            android:gravity="center" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardTips"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/cardSlotMachine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cardUser"
        app:layout_constraintWidth_percent="0.48">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manajemen Tips dan Trik"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="16dp"
            android:gravity="center" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardUser"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/cardEvent"
        app:layout_constraintStart_toEndOf="@id/cardTips"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.48">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manajemen Pengguna"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="16dp"
            android:gravity="center" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardWinHistory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/cardTips"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cardBanner"
        app:layout_constraintWidth_percent="0.48">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Riwayat Kemenangan"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="16dp"
            android:gravity="center" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardBanner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/cardUser"
        app:layout_constraintStart_toEndOf="@id/cardWinHistory"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.48">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manajemen Banner"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="16dp"
            android:gravity="center" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>